extends layout

block content
	h1 Register
	p Please register using the form below
	form(method='post',action='/users/login',enctype='multipart/form-data')
		.form-group
			label Username
			input.form-control(name='username',type='text',placeholder='Username')
		.form-group
			label Password
			input.form-control(name='password',type='password')
		input.btn.btn-default(name='submit',type='submit',value='Login')